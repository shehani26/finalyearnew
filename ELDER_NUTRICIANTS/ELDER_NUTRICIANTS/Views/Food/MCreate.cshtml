         document.getElementById('mealForm').addEventListener('submit', function(e) {
        e.preventDefault();

        // Create FormData object to handle file upload
        const formData = new FormData(this);

        // Show loading state
        const submitBtn = document.getElementById('submit-btn');
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';

        // AJAX submission
        fetch('@Url.Action("MCreate", "Food")', {
            method: 'POST',
            body: formData
        })
        .then(response => {
            if (!response.ok) throw new Error('Network response was not ok');
            return response.json();
        })
        .then(data => {
            if (data.success) {
                // Show success notification
                notification.classList.add('show');
                notification.textContent = 'Meal saved successfully!';

                // Reset form after successful submission if needed
                // document.getElementById('mealForm').reset();

                // Redirect or do something else
                window.location.href = '@Url.Action("MIndex", "Food")';
            } else {
                throw new Error(data.message || 'Failed to save meal');
            }
        })
        .catch(error => {
            notification.classList.add('show');
            notification.style.backgroundColor = 'var(--danger)';
            notification.textContent = error.message;
        })
        .finally(() => {
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="fas fa-save"></i> Save Meal';
            setTimeout(() => notification.classList.remove('show'), 3000);
        });
    });
